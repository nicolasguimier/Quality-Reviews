<% content_for :meta_title, "#{@organisation.name} - Let a review" %>
<% content_for :meta_description, "Easy way to let a review on social plateforms like Google, Facebook, Pinterest or Yelp for #{@organisation.name}" %>

<div class="qr-card text-center">
  <h1><%= @organisation.name %></h1>
  <p>Select your favorite plateform</p>
  <div class="d-flex flex-wrap justify-content-around">
    <% if @organisation.facebook_link.present? %>
      <%= link_to @facebook_link do %>
        <%= image_tag "facebook-avis.jpg" %>
      <% end %>
    <% end %>
    <% if @organisation.tripadvisor_link.present? %>
      <%= link_to @organisation.tripadvisor_link do %>
        <%= image_tag "tripadvisor-avis.jpg" %>
      <% end %>
    <% end %>
    <% if @organisation.google_link.present? %>
      <% google_link = "https://search.google.com/local/writereview?placeid=" + @organisation.google_link %>
      <%= link_to google_link do %>
        <%= image_tag "google-avis.jpg" %>
      <% end %>
    <% end %>
    <% if @organisation.yelp_link.present? %>
      <%= link_to @organisation.yelp_link do %>
        <%= image_tag "yelp-avis.jpg" %>
      <% end %>
    <% end %>
  </div>
</div>
<div class="text-center mt-1">
  Powered by <a href="/">Quality Reviews</a><%= image_tag "favicon/favicon-16x16.png" %>
</div>
